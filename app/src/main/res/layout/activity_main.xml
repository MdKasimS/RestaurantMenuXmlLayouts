<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/white"
android:fillViewport="true">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Header with Language Selection -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginBottom="16dp">

        <!-- Segment 4: Language Selection Button -->
        <Button
            android:id="@+id/btn_language"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="EN"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:background="@drawable/rounded_button"
            android:paddingHorizontal="16dp"
            android:minWidth="60dp" />

    </LinearLayout>

    <!-- App Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Food Paradise"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Segment 1: Cuisine Category Cards -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Explore Cuisines"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="12dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_cuisine_categories"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:layout_marginBottom="32dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    <!-- Segment 2: Top 3 Famous Dishes -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Top Famous Dishes"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="12dp" />

    <!-- Dish 1 -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="12dp">

            <ImageView
                android:id="@+id/img_dish1"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/placeholder_dish"
                android:scaleType="centerCrop"
                android:background="@drawable/rounded_image"
                android:clipToOutline="true" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="12dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_dish1_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Butter Chicken"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:id="@+id/tv_dish1_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹299"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/green" />

                    <TextView
                        android:id="@+id/tv_dish1_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="⭐ 4.5"
                        android:textSize="14sp"
                        android:textColor="@color/orange"
                        android:layout_marginStart="16dp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <Button
                        android:id="@+id/btn_dish1_minus"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:text="-"
                        android:textSize="18sp"
                        android:background="@drawable/circular_button"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tv_dish1_quantity"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@color/black" />

                    <Button
                        android:id="@+id/btn_dish1_plus"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:text="+"
                        android:textSize="18sp"
                        android:background="@drawable/circular_button"
                        android:textColor="@color/white" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Dish 2 -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="12dp">

            <ImageView
                android:id="@+id/img_dish2"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/placeholder_dish"
                android:scaleType="centerCrop"
                android:background="@drawable/rounded_image"
                android:clipToOutline="true" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="12dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_dish2_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chicken Biryani"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:id="@+id/tv_dish2_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹349"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/green" />

                    <TextView
                        android:id="@+id/tv_dish2_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="⭐ 4.7"
                        android:textSize="14sp"
                        android:textColor="@color/orange"
                        android:layout_marginStart="16dp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <Button
                        android:id="@+id/btn_dish2_minus"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:text="-"
                        android:textSize="18sp"
                        android:background="@drawable/circular_button"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tv_dish2_quantity"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@color/black" />

                    <Button
                        android:id="@+id/btn_dish2_plus"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:text="+"
                        android:textSize="18sp"
                        android:background="@drawable/circular_button"
                        android:textColor="@color/white" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Dish 3 -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="32dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="12dp">

            <ImageView
                android:id="@+id/img_dish3"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/placeholder_dish"
                android:scaleType="centerCrop"
                android:background="@drawable/rounded_image"
                android:clipToOutline="true" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="12dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_dish3_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Paneer Tikka"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:id="@+id/tv_dish3_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹249"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/green" />

                    <TextView
                        android:id="@+id/tv_dish3_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="⭐ 4.3"
                        android:textSize="14sp"
                        android:textColor="@color/orange"
                        android:layout_marginStart="16dp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <Button
                        android:id="@+id/btn_dish3_minus"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:text="-"
                        android:textSize="18sp"
                        android:background="@drawable/circular_button"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tv_dish3_quantity"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@color/black" />

                    <Button
                        android:id="@+id/btn_dish3_plus"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:text="+"
                        android:textSize="18sp"
                        android:background="@drawable/circular_button"
                        android:textColor="@color/white" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Segment 3: Cart Button -->
    <Button
        android:id="@+id/btn_cart"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Go to Cart"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/rounded_button_primary"
        android:layout_marginTop="16dp" />

</LinearLayout>

</ScrollView>